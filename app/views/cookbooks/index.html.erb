<h1>Cookbook#index</h1>
<p>Find me in app/views/cookbooks/index.html.erb</p>

<%= link_to 'Add Recipe', new_cookbook_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Cuisine</th>
  </tr>

  <% @cookbooks.each do |cookbook| %>
    <tr>
      <td><%= cookbook.name %></td>
      <td><%= cookbook.cuisine %></td>
    </tr>
  <% end %>
</table>
